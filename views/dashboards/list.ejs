    <script src="/tables/salesTable.js"></script>
    <script src="/tables/purchasesTable.js"></script>
    <script src="/tables/customersTable.js"></script>
    <script src="/tables/goodsTable.js"></script>
    <script src="/tables/usersTable.js"></script>
    <script src="/tables/unitsTable.js"></script>
    <script src="/tables/suppliersTable.js"></script>
    
</body>

</html>