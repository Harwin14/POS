<%- include('../partials/header') %>

<div class="d-flex col mb-2">
    <h1 class="h3  text-gray-800 px-2    ">Dashboard</h1> 
    <div class=" d-flex justify-content-end col" >
        <button type="submit" class="btn btn-primary " title="Save" aria-current="page"><i class="fas fa-solid fa-download"></i> Generate Report
        </button>

    </div>
</div>

    <!-- Begin Page Content -->
    <div class="container-fluid">


       
        <div class="card">
            <div class="card-header font-weight-bold text-primary">
                <h6 class="m-0 font-weight-bold text-primary">Date Settings</h6>
            </div>
            <div class="card-body row">
                <div class="col-md-6">
                    <div class="">
                        <label for="" class="form-labe font-weight-bold">Start Date</label>
                    </div>
                    <div class="">
                        <input type="date" class="form-control " id="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="">
                        <label for="" class="form-label font-weight-bold">End Date</label>
                    </div>
                    <div class="">
                        <input type="date" class="form-control " id="">
                    </div>
                </div>
            </div>
            <card class="card-footer">
                <button type="submit" class="btn btn-success btn-icon-split">
                    <span class="icon text-white-50"><i class="fas fa-solid fa-plus"></i></span>
                    <span class="text">FINISH</span>
                </button>
                <a href="" type="submit" class="btn btn-warning btn-icon-split">
                    <span class="icon text-white-50"><i class="fas fa-fw fa-undo-alt"></i></span>
                    <span class="text">Back</span>
                </a>
            </card>
            

        </div>
        <br>
        <div class="row">
            <!-- Purchases -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Purchases</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">Rp 715.000,00</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sales (Monthly) Card Example -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Sales</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">Rp 859.000,00</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Earnings (Monthly) Card Example -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Earnings </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">Rp 144.000,00</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Earnings (Monthly) Card Example -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Total Sales</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">4</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-comments-dollar fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- Begin Page Content -->

        <!-- Content Row -->
        <div class="row">

            <div class="col-xl-8 col-lg-7">

                <!-- Area Chart -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Area Chart</h6>
                    </div>
                    <div class="card-body">
                        <div class="chart-area">
                            <canvas id="myAreaChart"></canvas>
                        </div>
                        
                    </div>
                </div>
            </div>

            <!-- Donut Chart -->
            <div class="col-xl-4 col-lg-5">
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Donut Chart</h6>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="chart-pie pt-4">
                            <canvas id="myPieChart"></canvas>
                        </div>
                        
                        <div class="text-center dime">
                            <i class="fas fa-regular fa-circle di"></i>
                            Direct
                            <i class="fas fa-regular fa-circle me"></i>
                            <span>Member</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="card">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">Earning Monthly Report</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dashboards-table" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Monthly</th>
                                <th>Expense</th>
                                <th>Revenue</th>
                                <th>Earning</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <td>Monthly</td>
                                <td>Expense</td>
                                <td>Revenue</td>
                                <td>Earning</td>
                            </tr>
                        </tfoot>

                    </table>
                </div>
                
            </div>
        </div>
        <br>
        <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->
    <%- include('../partials/footer') %>