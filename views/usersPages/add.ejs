                    <!-- DataTales Example -->
                    <form action="/users/add" method="post">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h4 class="m-0 font-weight-bold text-primary">Form add</h6>
                            </div>
                            <div class="card-body">
                                <input type="hidden" name="page" value="1">
                                <div class="row mb-3 form-switch">
                                    <label for="email" class="form-check-label col-sm-2 text-lg ">Email</label>
                                    <div class="col-sm-10">
                                        <input type="email" class="form-control" name="email" placeholder="Email">
                                    </div>
                                </div>
                                <div class="row mb-3 form-switch">

                                    <label for="name" class="form-check-label col-sm-2 text-lg ">Nama</label>
                                    <div class="col-sm-10">
                                        <input type="string" class="form-control" name="name" placeholder="name">
                                    </div>
                                </div>
                                <div class="row mb-3 form-switch">

                                    <label for="password" class="form-check-label col-sm-2 text-lg ">Password</label>
                                    <div class="col-sm-10">
                                        <input type="string" class="form-control" name="password"
                                            placeholder="password">
                                    </div>
                                </div>
                                <div class=" form-switch">
                                    <label class="text-lg ">Role</label>
                                    <div class="role">
                                        <input type="radio" name="role" value=Operator id="Operator">
                                        <label for="Operator">Operator</label>
                                    </div>
                                    <div class="role">
                                        <input class="" type="radio" name="role" value=Admin id="Admin">
                                        <label for="Admin">Admin</label>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-success active" title="Save" aria-current="page"><i
                                            class="fas fa-solid fa-database"></i></button>
                                    <button class="btn btn-success ">Save</button>
                                </div>
                                <div class="btn-group">
                                    <a href="/users" class="btn btn-warning active" aria-current="page"><i
                                            class="fas fa-regular fa-hand-point-left"></i></a>
                                    <a href="/users" class="btn btn-warning">Back</a>

                                </div>
                            </div>
                        </div>
                    </form>
