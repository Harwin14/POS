<%- include('../partials/header') %>


            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">Purchases</h1>
                <p class="mb-4">This is data of Purchases</p>


                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <form action="" id="start-form">
                        <div class="btn-group">
                            <button href="" type="submit" class="btn btn-primary active" aria-current="page"><i
                                    class="fas fa-solid fa-plus"></i></button>
                            <button href="" class="btn btn-primary">Add</button>
                        </div>
                        </form>
                        <div class="text-center">
                            <%- include('../partials/alert') %>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="purchases-table" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Invoice</th>
                                        <th>Time</th>
                                        <th>Total Summary</th>
                                        <th>Supplier</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Invoice</th>
                                        <th>Time</th>
                                        <th>Total Summary</th>
                                        <th>Supplier</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot> 
                            </table>
                        </div>
                    </div>
                </div> 

            </div> 
            <!-- /.container-fluid -->
            </div> 
            <!-- End of Main Content -->
            <script>
                const invoice = "";
                $(document).ready(function(){
                    $('#start-form').submit(function(e){
                        e.preventDefault();
                        $.post('/purchases/start').done(function(data){
                        invoice = data.invoice
                        $('#invoice').val(invoice)
                        $('#time').val(data.time)
                        $("#start-form").prop("disabled", true)
                        $("#detail-form").prop("disabled", false)
//detail-form tidak perlu

                let invoice = "";
                        })
                    })
                })
            </script>
