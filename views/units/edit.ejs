<%- include('../partials/header') %>


                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Unit</h1>

                    <!-- DataTales Example -->
                    <form action="" method="post">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h4 class="m-0 font-weight-bold text-primary">Form edit</h6>
                            </div>
                            <div class="card-body">
                               
                                <div class="row mb-3 form-switch">
                                    <label for="unit" class="form-check-label col-sm-2 text-lg">Unit</label>
                                    <div class="col-sm-10">
                                        <input type="string" class="form-control" name="unit"
                                            value="<%= item.unit %>" readonly>
                                    </div>
                                </div>
                                <div class="row mb-3 form-switch">

                                    <label for="name" class="form-check-label col-sm-2 text-lg">Nama</label>
                                    <div class="col-sm-10">
                                        <input type="string" class="form-control" name="name" 
                                            value="<%= item.name %>">
                                    </div>
                                </div>
                                <div class="row mb-3 form-switch">

                                    <label for="note" class="form-check-label col-sm-2 text-lg">Note</label>
                                    <div class="col-sm-10">
                                        <textarea type="string" class="form-control" name="note" 
                                            value=""><%= item.note %></textarea>
                                    </div>
                                </div>
                    
                            </div>
                            <div class="card-footer">
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-success active" title="Save" aria-current="page"><i
                                            class="fas fa-solid fa-database"></i></button>
                                    <button class="btn btn-success ">Save</button>
                                </div>
                                <div class="btn-group">
                                    <a href="/units" class="btn btn-warning active" aria-current="page"><i
                                            class="fas fa-fw fa-undo-alt"></i></a>
                                    <a href="/units" class="btn btn-warning">Back</a>

                                </div>
                            </div>
                        </div>
                    </form>
                </div>
        </div>

        <!-- /.container-fluid -->

        <!-- End of Main Content -->
<%- include('../partials/footer') %>