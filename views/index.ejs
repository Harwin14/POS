<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/stylesheets/stylesb.css" rel="stylesheet">
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
    <link href="./fontawesome/css/all.css" rel="stylesheet">
    <link href="./stylesheets/styledd.css" rel="stylesheet">
    <link href="./stylesheets/style4.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
    <title>Dashboard</title>
    <script src="/jquery-3.6.1.min.js"></script>
</head>

<body>
    <div class="main-container d-flex">
        <%- include('./partials/sidebar') %>
            <%- include('./partials/navbar') %>
    </div>
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        <a> ID
                        </a>
                    </th>

                    <th>
                        <a>String
                        </a>
                    </th>

                    <th> <a>Integer
                        </a>
                    </th>
                    <th>
                        <a>Float
                        </a>
                    </th>
                    <th>
                        <a>Date
                        </a>
                    </th>
                    <th> 
                        <a>Boolean
                        </a>
                    </th>
                    <th >Actions </th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((item, index)=> { %>
                    <tr>
                        <div>
                            <td>
                                 <%=item.id %>
                            </td>

                            <td>
                                <%= item.string %>
                            </td>
                            <td>
                                <%= item.integer %>
                            </td>
                            <td>
                                <%= item.float %>
                            </td>
                            <td>
                                <%= moment(item.date).format('DD MMM YYYY'); %>
                            </td>
                            <td>
                                <%= item.boolean %>
                            </td>
                            <td>
                                <div class="d-grid gap-2 d-md-block">
                                    <a class="btn btn-success" href="/edit/<%= item.id %>">Edit</a>
                                    <a class="btn btn-danger" href="/delete/<%= item.id %>"
                                        href="delete_methode_link"
                                        onclick="return confirm('Are you sure you want to delete?');">Delete
                                    </a>
                                </div>
                            </td>
                        </div>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <script>
        $(".sidebar ul li").on('click', function () {
            $(".sidebar ul li.active").removeClass('active');
            $(this).addClass('active');
        })
        $('.open-btn').on('click', function () {
            $('.sidebar').addClass('active');
        })
        $('.close-btn').on('click', function () {
            $('.sidebar').removeClass('active');
        })

    </script>
    <script>
        function menuToggle() {
            const toggleMenu = document.querySelector('.menu');
            toggleMenu.classList.toggle('active')
        }
    </script>

    <%- include('./partials/footer') %>