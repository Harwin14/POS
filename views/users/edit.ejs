<%- include('../partials/header') %>


                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Users</h1>


                    <!-- DataTales Example -->
                    <form action="" method="post">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h4 class="m-0 font-weight-bold text-primary">Form Edit</h6>
                            </div>
                            <div class="card-body">
                                
                                <div class="row mb-3 form-switch">

                                    <label for="email" class="form-check-label col-sm-2 text-lg ">Email</label>
                                    <div class="col-sm-10">
                                        <input type="email" class="form-control" name="email" placeholder="Email"
                                            value="<%= item.email %>" readonly>
                                    </div>
                                </div>
                                <div class="row mb-3 form-switch">

                                    <label for="name" class="form-check-label col-sm-2 text-lg ">Nama</label>
                                    <div class="col-sm-10">
                                        <input type="string" class="form-control" name="name" placeholder="Name"
                                            value="<%= item.name %>">
                                    </div>
                                </div>
                                <fieldset class="form-switch">
                                    <div class="row">
                                      <legend class="col-form-label col-sm-2 pt-0 text-lg">Role</legend>
                                      <div class="col-sm-10">
                                        <div class="form-check">
                                          <input class="form-check-input" type="radio" name="role" value=Operator  <%= item.role == 'Operator' ? 'checked' : '' %> id="Operator">
                                          <label class="form-check-label" for="Operator">
                                            Operator
                                          </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="role" value=Admin <%= item.role == 'Admin' ? 'checked' : '' %> id="Admin">
                                            <label class="form-check-label" for="Admin">
                                              Admin
                                            </label>
                                        </div>
                                      </div>
                                    </div>
                                  </fieldset>
                            </div>
                            <div class="card-footer">
                              <div class="btn-group">
                                  <button type="submit" class="btn btn-success active" title="Save" aria-current="page"><i
                                          class="fas fa-solid fa-database"></i></button>
                                  <button class="btn btn-success ">Save</button>
                              </div>
                              <div class="btn-group">
                                  <a href="/users" class="btn btn-warning active" aria-current="page"><i
                                          class="fas fa-fw fa-undo-alt"></i></a>
                                  <a href="/users" class="btn btn-warning">Back</a>

                              </div>
                          </div>

                        </div>
                    </form>
                </div>
        </div>

        <!-- /.container-fluid -->

        <!-- End of Main Content -->
<%- include('../partials/footer') %>